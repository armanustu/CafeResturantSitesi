@model CafeResturant.Models.About

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-8">

            <h3>Bu kayıdı silmek istediğinizden eminmisiniz</h3>
            <div>

                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                       Konu
                    </dt>
                    <dd class="col-sm-10">
                      @Html.DisplayFor(model=>model.Konu)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="AboutID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-primary">Kayıt listesi</a>
                </form>
            </div>

        </div>
    </div>

</div>