@model CafeResturant.Models.About

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hakkımzda oluştur</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <textarea asp-for="Konu" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Konu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-primary">Kayıt Listesi</a>             
            </div>
        </form>
    </div>
</div>


