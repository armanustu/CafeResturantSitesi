@model CafeResturant.Models.Galeri

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Silmek istediğinizden eminmisiniz</h3>
<div>
   
    <dl class="row">
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
       <img src="@Model.Image" width="300" height="300">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GaleriID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Kayıt Listesi</a>
    </form>
</div>
