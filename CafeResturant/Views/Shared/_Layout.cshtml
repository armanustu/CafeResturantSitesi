@using CafeResturant.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafeResturant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafeResturant.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.0/css/dataTables.dataTables.min.css">
</head>
<body>
  
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    @*@if (User.Identity.IsAuthenticated){ burası hangi kullanıcı girerse girerse girsin layout açılacak oyüzden yoruma çektik çünkü rolleme işlemine göre sayfayı açmaya çalışıyoruz*@

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">CafeResturant</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                       
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">Kategori</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Rezervasyons" asp-action="Index">Rezervasyon</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Galeri" asp-action="Index">Galeri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="About" asp-action="Index">Hakkımızda</a>
                            </li>
                            <li class="nav-item">
               
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Contact" asp-action="Index">Mesajlar</a>
                            </li>
                        <li class="nav-item">

                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Menus" asp-action="Index">Menüler</a>
                        </li>
                        @if (User.IsInRole(diger.Role_admin))//Burası kullancı giriş yaptığında linkine tıklandığında Rolleme doğruysa linkler açılacaktir
                                                             //Normal kullanıcı olarak giriş yaptığımızda Kullancılar linki görünmeyecektir
                        {                                    
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">Kullanıcılar


                                </a>
                            </li>
                        }
                         @if (User.IsInRole(diger.Role_sekreter))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">Kullanıcılar


                                </a>
                            </li>
                        }
                        else 
                        
                        {
                            <li class="nav-item">
                                
                            </li>
                        }
                    </ul>
                        <partial name="_LoginPartial" />
                    </div>
                                      
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CafeResturant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.1.4/js/dataTables.min.js"></script>
    @await Component.InvokeAsync("NToastNotify")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
